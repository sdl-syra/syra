<% unless flash[:info].nil? %>
<div class="col-md-offset-8 text-center alert alert-danger"><%= flash[:info] %></div>
<% end %>

<div class="container">
		<h1>Identifies-toi! </h1>
		<% if not flash[:error].nil? %>
			<div class="col-md-offset-8 text-center alert alert-danger"><%= flash[:error] %></div>
		<% end %>
		<%= form_for(:session, :url => sessions_path, :html => { :class => 'form-signin', :role => 'form' }) do |f| %>

		<div class="field">
			<%= f.text_field :email, :class=>"form-control", :placeholder => "Adresse e-mail" %>
		</div>
		<div class="field">
			<%= f.password_field :password, :class=>"form-control", :placeholder => "Mot de passe" %>
		</div>
		<div class="actions">
			<%= f.submit "S'identifier ", :class=>"btn btn-lg btn-primary btn-block" %>
		</div>
		<div>
			<br/>
			<br/>
			<p><%= link_to "Mot de passe oubliÃ© ?", new_password_reset_path %></p>
			<p>
				Pas encore inscrit ? <%= link_to "S'inscrire !", signup_path %>
			</p>
			<p>
				Connexion avec votre compte Facebook : <%= link_to 'Login with Facebook', '/auth/facebook/' %>
			</p>
		</div>
		<% end %>
</div>

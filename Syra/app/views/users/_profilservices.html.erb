<div class="panel panel-default">
        <div class="panel-heading">
          <i class="fa fa-bar-chart-o fa-fw"></i> Services proposés
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-4">
              <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                  <thead>
                    <tr>
                      <% if @user.services.size>0 %>
                      <th>#</th>
                      <th>Date</th>
                      <th>Nom</th>
                      <th>Catégories</th>
                      <th>Etat</th>
                      <th>Montant</th>
                      <th>Propositions</th>
                      <% else %>
                        Aucun service
                       <% end %>
                    </tr>
                  </thead>
                  <tbody>
                    <% @user.services.each do |service| %>
                    <tr>
                      <td><%= service.id %></td>
                      <td><%= service.created_at %></td>
                      <td><%= service.title %></td>
                      <td><%= service.category.name %></td>
                      <td> <% if service.isFinished==true %>
                      Terminé
                      <% else %>
                      En cours
                      <%end%> </td>
                      <td><%= service.price %></td>
                      <td><%= link_to service.propositions.size,service_path(service) %> </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-4 (nested)
            <div class="col-lg-8">
            <div id="morris-bar-chart"></div>
            </div>
            <!-- /.col-lg-8 (nested) -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
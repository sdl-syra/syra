<script type="text/javascript">
	$(document).ready(function() {if ($("#errors_completion").length>0) $('#gotoProfile').tab('show');})
</script>

<% unless @user.errors.messages.empty? %>
	<div id="errors_completion" class="container">
		<div class="row col-lg-5 pull-right">
			<% unless @user.errors.values.select{|a| a.include?("can't be blank")}.empty? %>
				<div class="alert alert-danger alert-dismissible">Veuillez remplir tous les champs</div>
			<%end%>
			<% if @user.errors.added? :password, :too_short, {count:8} %>
				<div class="alert alert-danger alert-dismissible">Mot de passe trop court (minimum 8 caractères)</div>
			<% end %>
			<% if @user.errors.added? :email, :taken %>
				<div class=" alert alert-danger alert-dismissible">Cet email est déjà pris</div>
			<% end %>
			<%if @user.errors.has_key?(:accept_conditions)%>
				<div class=" alert alert-danger alert-dismissible">Vous devez accepter les conditions d'utilisation</div>
			<%end%>
		</div>
	</div>
<%end%>

<div class="board">
	<%= form_for @user, :html => { :class => 'form-signin', :role => 'form' } do |f| %>
                    <!-- <h2>Welcome to IGHALO!<sup>™</sup></h2>-->
	<div class="board-inner">
		<ul class="nav nav-tabs" id="myTab">
            <div class="liner"></div>
             <li class="active">
             	<a href="#home" data-toggle="tab" title="welcome">

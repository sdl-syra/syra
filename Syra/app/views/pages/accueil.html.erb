								 <p>Posté par <%= link_to s.user.name, user_path(s.user) %></p>
                            </div>
           			<% if i==4 or i==8 or i==12 %>
	                        </div> <!--/row-->
	                    </div> <!--/item-->
                	<% end %>
                	<% i+=1 %>
                <% end %>
                <% if lesServices.size!=4 and lesServices.size!=8 and lesServices.size!=12 %>
	                        </div> <!--/row-->
	                   	</div> <!--/item-->
                <% end %>
                
                </div> <!--/carousel-inner--> 
                <% if lesServices.size>4 %>
                <a class="left carousel-control" href="#carouselServices" data-slide="prev">‹</a>
                <a class="right carousel-control" href="#carouselServices" data-slide="next">›</a>
                <% end %> 

            </div> <!--/carouselServices-->
        </div> <!--/well-->
    </div>
</div> <!--/container-->


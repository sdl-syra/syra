				</div>
			</div>
		</div>

	</div>
	<!-- /.container -->

</div>
<!-- /.intro-header -->

<% nbServicesDansCarousel = 12 %>
<% nbServicesParLigne = 4 %> <!-- Modifier la classe de la balise /!\ css -->

<% lesServices = Service.where(isFinished: false).limit(nbServicesDansCarousel).order("RANDOM()")%>
<% if lesServices.size > 0 %>
<div class="container">
	<div class="col-md-12">
		<h1>Services en ligne</h1>

		<div class="well">
			<div id="carouselServices" class="carousel slide">
				<!-- Carousel items -->
				<div class="carousel-inner">
					<% i = 1 %>
					<% lesServices.each do |s| %>
					<% if i==1 %>
					<div class="item active">
						<div class="row">
							<% elsif i%nbServicesParLigne == 1 %>
							<div class="item">
								<div class="row">
									<% end %>
									<div class="col-sm-3">
										<h2><%= link_to s.title, service_path(s) %></h2>
										<p>
											<%= truncate(s.description, :length => 50) %>
										</p>
										<p>
											<a class="btn btn-default" href="<%= service_path(s) %>" role="button">Plus de details &raquo;</a>
										<p>
											Posté par <%= link_to s.user.name, user_path(s.user) %>
										</p>
									</div>
									<% if i%nbServicesParLigne == 0 %>
								</div>
								<!--/row-->
							</div>
							<!--/item-->
							<% end %>
							<% i+=1 %>
							<% end %>
							<% if lesServices.size%nbServicesParLigne != 0 %>
						</div>
						<!--/row-->
					</div>
					<!--/item-->
					<% end %>

				</div>
				<!--/carousel-inner-->
				<% if lesServices.size>nbServicesParLigne %>
				<a class="left carousel-control" href="#carouselServices" data-slide="prev" style="margin-left: -5%; background-image: none; padding-top:10%;width:5%;">‹</a>
				<a class="right carousel-control" href="#carouselServices" data-slide="next" style="margin-left: -5%; background-image: none; padding-top:10%;width:5%;">›</a>
				<% end %>

			</div>
			<!--/carouselServices-->
		</div>
		<!--/well-->
	</div>
</div>
<!--/container-->
<% end %>


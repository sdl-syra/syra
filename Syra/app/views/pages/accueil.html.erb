						<li>
							<%= search_form_for @q, url: index_services_path, html: {:method => 'get'} do |f| %>
							<p>
								<%= f.text_field :title_or_description_cont, :class=>"form-control", :placeholder => "Cours de natation, jardinage ..." %> </br>

<script type="text/javascript">
$(document).ready(function() {
    var $lightbox = $('#allnotifs');    
    $lightbox.on('shown.bs.modal', function (e) {
        var $iframe = $lightbox.find('iframe');
        var w = $(window).width() - ($(window).width()/4);
        var h = $(window).height() - ($(window).height()/6);
        $iframe.attr("width",w);
        $iframe.attr("height",h);
        $iframe.attr("src","http://www.eclypsia.com/fr/eclypsiatv");
        $lightbox.find('.modal-dialog').css({'width': $iframe.width()});
        $lightbox.find('.modal-dialog').css({'height': $iframe.height()});
        $lightbox.find('.close').removeClass('hidden');
    });
});
</script>


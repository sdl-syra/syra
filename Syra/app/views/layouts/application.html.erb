<!DOCTYPE html>
<html>
	<head>
		<title>Syra</title>
		<%= stylesheet_link_tag    "application" %>
		<link rel="stylesheet" href="../../assets/bootstrap.css">
		<!-- <link href="jumbotron.css" rel="stylesheet">-->
		<!-- Custom Google Web Font -->
		<!-- <link href="../../assets/font-awesome.min.css" rel="stylesheet"> -->
		<link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>

		<!-- Add custom CSS here -->
		<link href="../../assets/landing-page.css" rel="stylesheet">
		<link href="../../assets/signin.css" rel="stylesheet">

		<!-- Page-Level Plugin CSS - Dashboard -->
		<link href="../../assets/morris/morris-0.4.3.min.css" rel="stylesheet">
		<link href="../../assets/timeline.css" rel="stylesheet">

		<!-- SB Admin CSS - Include with every page -->
		<link href="../../assets/sb-admin.css" rel="stylesheet">
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag "https://apis.google.com/js/plusone.js" %>
		<link rel="stylesheet" href="../../assets/bootstrap.min.js">
		<%= yield :head %>
		<%= csrf_meta_tags %>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="Syra echande de services SEL">
		<meta name="author" content="Maxime Boutrouille Terry Mainvis Maxime Prud'homme Julien Dusquesnoy Xavier Koma">
		<%= favicon_link_tag 'favicon.ico' %>
		<script type="text/javascript">
			function resetBadgeNotif() {
				$("#badgeNotif").hide();
				$.ajax("<%=all_notif_checked_path%>")
			}
		</script>
	</head>

	<body data-no-turbolink> 
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/"><strong>Syra</strong> <em>beta</em></a>
			</div>
			
			<% if signed_in? then %>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
				<ul class="nav navbar-nav">

					<li class="dropdown">
			          <a href="#" onclick="resetBadgeNotif()" class="dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-bullhorn"></i> Notifs 
			          	<% if (Notification.where(user: User.find(current_user.id),is_checked: false).count>0) %>
			          		<span id="badgeNotif" class="badge">
			          			<%=Notification.where(user: User.find(current_user.id),is_checked: false).count%>
			          		</span>
			          	<%end%>
			          <b class="caret"></b></a>
			          <ul class="dropdown-menu">
			          	<% if (Notification.where(user: User.find(current_user.id)).count==0) %>
			          		<li><a href=#>Aucune notification</a></li>
			          	<%else%>
							<% Notification.where(user: User.find(current_user.id),is_checked: false).order(created_at: :desc).each do |n| %>
								<li <%if n.is_checked==false%>style='background-color:#F0E68C'<%end%>><a href="<%="http://localhost:3000/"+n.url%>">
									<%if time_ago_in_words(n.created_at).end_with?"h" and time_ago_in_words(n.created_at).gsub("Il y a","").sub("h","").to_i>12%>
										<i><%=n.created_at.to_formatted_s(:day_month_year)%></i>
									<%else%>
										<i><%=time_ago_in_words(n.created_at)%></i>
									<%end%>
									<%=n.label%></a></li>
							<%end%>
							<% if (Notification.where(user: User.find(current_user.id),is_checked: false).count<10) %>
								<% Notification.where(user: User.find(current_user.id),is_checked: true).order(created_at: :desc).take(10-Notification.where(user: User.find(current_user.id),is_checked: false).count).each do |n| %>
									<li><a href="<%="http://localhost:3000/"+n.url%>">
										<%if time_ago_in_words(n.created_at).end_with?"h" and time_ago_in_words(n.created_at).gsub("Il y a","").sub("h","").to_i>12%>
											<i><%=n.created_at.to_formatted_s(:day_month_year)%></i>
										<%else%>
											<i><%=time_ago_in_words(n.created_at)%></i>
										<%end%>
										<%=n.label%></a></li>
								<%end%>
							<%end%>
							<li> <%= link_to 'Tout Supprimer',
			                      delete_all_notifications_path,
			                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Voulez vous vraiment supprimer toutes les notifications ?')) },
			                      :class => 'btn btn-mini btn-danger' %></li>
				    	<%end%>
			          </ul>
			        </li>
			        
			        <li class="dropdown user-dropdown">
		              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= current_user.name %> <%= current_user.lastName %> <b class="caret"></b></a>
		              <ul class="dropdown-menu">
		                <li><a href="<%= user_path(current_user.id) %>"><i class="fa fa-user"></i> Profile</a></li>
		                <li><a href="#"><i class="fa fa-envelope"></i> Inbox <span class="badge">7</span></a></li>
		                <li><a href="#"><i class="fa fa-gear"></i> Settings</a></li>
		                <li class="divider"></li>
		                <li><i class="fa fa-power-off"><%= link_to "Déconnexion", signout_path, :method => :delete %> </i> </li>
		              </ul>
            		</li>
			        
			        <!--<li>
						<a href="<%= user_path(current_user.id) %>">Connecté en tant que <%= current_user.name %> <%= current_user.lastName %></a>
					</li>
					<li>
						<%= link_to "Déconnexion", signout_path, :method => :delete %>
					</li> -->
				</ul>
			</div>

			<% else %>
			<div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
				<ul class="nav navbar-nav">
					<!--<li><a href="#about">About</a>
					</li>-->
					<li>
						<%= link_to "Se connecter" , signin_path, :id => "button_id" %>
					</li>
					<li>
						<%= link_to "S'inscrire" , signup_path, :id => "button_id" %>
					</li>
				</ul>
			</div>
			<% end %>

			<!-- /.navbar-collapse -->
		</div>
		<!-- /.container -->
	</nav>

		<%= yield %>

		<hr/>
		<footer>
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<ul class="list-inline">
							<li>
								<a href="/">Acceuil</a>
							</li>
							<li class="footer-menu-divider">
								&sdot;
							</li>
							<li>
								<a href="/equipe">L'Equipe</a>
							</li>
							<li class="footer-menu-divider">
								&sdot;
							</li>
							<li>
								<a href="/services_footer">Service</a>
							</li>
							<li class="footer-menu-divider">
								&sdot;
							</li>
							<li>
								<a href="/contact">Contactez-nous</a>
							</li>
						</ul>
						<p class="copyright text-muted small">
							Copyright &copy; Syra 2014. All Rights Reserved
						</p>
					</div>
				</div>
			</div>
		</footer>

		<!-- JavaScript -->
		<script src="../../assets/javascripts/bootstrap.js"></script>
	</body>
</html>

